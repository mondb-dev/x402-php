# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf

# Documentation files
*.txt text eol=lf
LICENSE text eol=lf
README text eol=lf

# Exclude from export (when creating release archives)
/.github export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/tests export-ignore
/phpunit.xml.dist export-ignore
/phpstan.neon export-ignore
/.php-cs-fixer.php export-ignore
/AUDIT_*.md export-ignore
/CONTRIBUTING.md export-ignore
/.editorconfig export-ignore
