{
    "name": "mondb-dev/x402-php",
    "description": "PHP implementation of the x402 payments protocol",
    "type": "library",
    "keywords": ["x402", "payment", "protocol", "blockchain", "ecommerce"],
    "homepage": "https://github.com/mondb-dev/x402-php",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "mondb-dev"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8",
        "ext-json": "*",
        "psr/log": "^3.0"
    },
    "suggest": {
        "ext-redis": "Required for RedisNonceTracker and RedisRateLimiter",
        "ext-bcmath": "Required for safe uint256 arithmetic operations",
        "monolog/monolog": "Recommended PSR-3 logger implementation",
        "psr/http-message": "Required for PSR-7 HTTP response support",
        "psr/http-server-middleware": "Required for PSR-15 middleware support"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.48"
    },
    "autoload": {
        "psr-4": {
            "X402\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "X402\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
